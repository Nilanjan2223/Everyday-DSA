class Solution{

    // arr: input array
    // n: size of array
    //Function to find the sum of contiguous subarray with maximum sum.
    long maxSubarraySum(int arr[], int n){
        
        // Your code here
        long cur_sum = arr[0];
        long max_sum = arr[0];
        for (int i = 0; i<n;i++){
            cur_sum = Math.max(cur_sum+arr[i],arr[i]);
            max_sum = Math.max(cur_max,max_sum);
            
        }
        return max_sum;
    }
    
}
